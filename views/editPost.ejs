<%- include("partials/header.ejs") %>
<head>
  <link rel="stylesheet" href="/styles/editPost.css" />
</head>
<% if (locals.updateSucess && locals.updateSucess == true) { %>
<div class="alert-success">âœ… Updated successfully!</div>
<% } %>
<form
  action="/update/<%= post.id %>"
  method="post"
  enctype="multipart/form-data"
>
  <label for="uploadFile">Upload</label>
  <input type="file" name="uploadFile" accept="image/*" />
  <p style="font-size: 13px; color: #555; margin-top: 5px">
    Current file: <strong><%= post.fileName %></strong>
  </p>
  <label for="category">category</label>
  <input type="text" name="category" value="<%= post.category %>" required />

  <label for="title">Title</label>
  <input type="text" name="title" value="<%= post.title %>" required />

  <label for="content">Content</label>
  <textarea name="content" required><%= post.content %></textarea>
  <label for="writer">Writer</label>
  <input type="text" name="writer" value="<%= post.writer %>" required />
  <div class="editOptions">
    <input type="submit" value="UPDATE" />
    <a href="/cancelEdit" class="cancel">CANCEL EDIT</a>
  </div>
</form>

<%- include("partials/footer.ejs") %>

<script>
  var header = $("#header");
  var anchorTags = $("#header > a");
  console.log(anchorTags);
  $(anchorTags[0]).text("EDIT BLOG");
  $(anchorTags[0]).addClass("active");
</script>
